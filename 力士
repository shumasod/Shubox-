                  <div className="space-y-4">
                    <div>
                      <label className="block text-sm text-stone-600 mb-1">ÂõõËÇ°Âêç</label>
                      <input
                        type="text"
                        value={newWrestler.name}
                        onChange={(e) => setNewWrestler({...newWrestler, name: e.target.value})}
                        className="w-full border border-stone-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-stone-300"
                        placeholder="‰æã: ÁôΩÈµ¨"
                      />
                    </div>
                    <div>
                      <label className="block text-sm text-stone-600 mb-1">Áï™‰ªò</label>
                      <select
                        value={newWrestler.rank}
                        onChange={(e) => setNewWrestler({...newWrestler, rank: e.target.value})}
                        className="w-full border border-stone-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-stone-300"
