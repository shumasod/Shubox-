import React, { useState } from 'react';

const NotionSumoApp = () => {
  const [wrestlers, setWrestlers] = useState([
    { id: 1, name: 'ÁÖß„ÉéÂØåÂ£´', rank: 'Ê®™Á∂±', wins: 12, losses: 3, status: 'Âá∫Â†¥' },
    { id: 2, name: 'Áê¥Ê´ª', rank: 'Â§ßÈñ¢', wins: 10, losses: 5, status: 'Âá∫Â†¥' },
    { id: 3, name: 'Ë±äÊòáÈæç', rank: 'Â§ßÈñ¢', wins: 11, losses: 4, status: 'Âá∫Â†¥' },
    { id: 4, name: 'Â§ß„ÅÆÈáå', rank: 'Â§ßÈñ¢', wins: 13, losses: 2, status: 'Âá∫Â†¥' },
    { id: 5, name: 'ÈòøÁÇé', rank: 'Èñ¢ËÑá', wins: 9, losses: 6, status: 'Âá∫Â†¥' },
    { id: 6, name: 'Ëã•ÂÖÉÊò•', rank: 'Èñ¢ËÑá', wins: 8, losses: 7, status: 'Âá∫Â†¥' },
    { id: 7, name: 'Â§ßÊ†ÑÁøî', rank: 'Â∞èÁµê', wins: 7, losses: 8, status: 'Âá∫Â†¥' },
    { id: 8, name: 'Âπ≥Êà∏Êµ∑', rank: 'Â∞èÁµê', wins: 10, losses: 5, status: 'Âá∫Â†¥' },
  ]);

  const [matches, setMatches] = useState([
    { id: 1, day: 1, east: 'ÁÖß„ÉéÂØåÂ£´', west: 'ÈòøÁÇé', winner: 'ÁÖß„ÉéÂØåÂ£´', technique: 'ÂØÑ„ÇäÂàá„Çä' },
    { id: 2, day: 1, east: 'Áê¥Ê´ª', west: 'Â§ßÊ†ÑÁøî', winner: 'Áê¥Ê´ª', technique: 'Êäº„ÅóÂá∫„Åó' },
    { id: 3, day: 1, east: 'Ë±äÊòáÈæç', west: 'Ëã•ÂÖÉÊò•', winner: 'Ë±äÊòáÈæç', technique: '‰∏äÊâãÊäï„Åí' },
    { id: 4, day: 2, east: 'Â§ß„ÅÆÈáå', west: 'ÁÖß„ÉéÂØåÂ£´', winner: 'Â§ß„ÅÆÈáå', technique: 'Êäº„ÅóÂá∫„Åó' },
    { id: 5, day: 2, east: 'ÈòøÁÇé', west: 'Áê¥Ê´ª', winner: 'ÈòøÁÇé', technique: 'Á™Å„ÅçÂá∫„Åó' },
  ]);

  const [activeView, setActiveView] = useState('wrestlers');
  const [showAddWrestler, setShowAddWrestler] = useState(false);
  const [showAddMatch, setShowAddMatch] = useState(false);
  const [newWrestler, setNewWrestler] = useState({ name: '', rank: 'ÂâçÈ†≠', wins: 0, losses: 0, status: 'Âá∫Â†¥' });
  const [newMatch, setNewMatch] = useState({ day: 1, east: '', west: '', winner: '', technique: '' });
  const [filterRank, setFilterRank] = useState('all');
  const [sortBy, setSortBy] = useState('rank');

  const ranks = ['Ê®™Á∂±', 'Â§ßÈñ¢', 'Èñ¢ËÑá', 'Â∞èÁµê', 'ÂâçÈ†≠'];
  const techniques = ['ÂØÑ„ÇäÂàá„Çä', 'Êäº„ÅóÂá∫„Åó', '‰∏äÊâãÊäï„Åí', '‰∏ãÊâãÊäï„Åí', 'Á™Å„ÅçÂá∫„Åó', 'Âè©„ÅçËæº„Åø', 'Âºï„ÅçËêΩ„Å®„Åó', 'ÈÄÅ„ÇäÂá∫„Åó', 'Âêä„ÇäÂá∫„Åó', 'Êé¨„ÅÑÊäï„Åí'];
  const statuses = ['Âá∫Â†¥', '‰ºëÂ†¥', 'ÂºïÈÄÄ'];

  const rankOrder = { 'Ê®™Á∂±': 1, 'Â§ßÈñ¢': 2, 'Èñ¢ËÑá': 3, 'Â∞èÁµê': 4, 'ÂâçÈ†≠': 5 };

  const getRankColor = (rank) => {
    const colors = {
      'Ê®™Á∂±': 'bg-purple-100 text-purple-800',
      'Â§ßÈñ¢': 'bg-red-100 text-red-800',
      'Èñ¢ËÑá': 'bg-orange-100 text-orange-800',
      'Â∞èÁµê': 'bg-yellow-100 text-yellow-800',
      'ÂâçÈ†≠': 'bg-gray-100 text-gray-800',
    };
    return colors[rank] || 'bg-gray-100 text-gray-800';
  };

  const getStatusColor = (status) => {
    const colors = {
      'Âá∫Â†¥': 'bg-green-100 text-green-800',
      '‰ºëÂ†¥': 'bg-red-100 text-red-800',
      'ÂºïÈÄÄ': 'bg-gray-300 text-gray-600',
    };
    return colors[status] || 'bg-gray-100 text-gray-800';
  };

  const getWinRate = (wins, losses) => {
    const total = wins + losses;
    if (total === 0) return '0%';
    return `${Math.round((wins / total) * 100)}%`;
  };

  const filteredWrestlers = wrestlers
    .filter(w => filterRank === 'all' || w.rank === filterRank)
    .sort((a, b) => {
      if (sortBy === 'rank') return rankOrder[a.rank] - rankOrder[b.rank];
      if (sortBy === 'wins') return b.wins - a.wins;
      if (sortBy === 'name') return a.name.localeCompare(b.name, 'ja');
      return 0;
    });

  const addWrestler = () => {
    if (!newWrestler.name) return;
    setWrestlers([...wrestlers, { ...newWrestler, id: Date.now() }]);
    setNewWrestler({ name: '', rank: 'ÂâçÈ†≠', wins: 0, losses: 0, status: 'Âá∫Â†¥' });
    setShowAddWrestler(false);
  };

  const addMatch = () => {
    if (!newMatch.east || !newMatch.west || !newMatch.winner) return;
    setMatches([...matches, { ...newMatch, id: Date.now() }]);
    setNewMatch({ day: 1, east: '', west: '', winner: '', technique: '' });
    setShowAddMatch(false);
  };

  const deleteWrestler = (id) => {
    setWrestlers(wrestlers.filter(w => w.id !== id));
  };

  const updateWrestler = (id, field, value) => {
    setWrestlers(wrestlers.map(w => 
      w.id === id ? { ...w, [field]: field === 'wins' || field === 'losses' ? parseInt(value) || 0 : value } : w
    ));
  };

