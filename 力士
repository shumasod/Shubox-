                          onChange={(e) => updateWrestler(wrestler.id, 'name', e.target.value)}
                          className="font-medium text-stone-800 bg-transparent border-none focus:outline-none focus:ring-2 focus:ring-stone-300 rounded px-1 -ml-1"
