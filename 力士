                          onChange={(e) => updateWrestler(wrestler.id, 'status', e.target.value)}
                          className={`text-xs px-2 py-1 rounded-full font-medium ${getStatusColor(wrestler.status)} border-none focus:outline-none focus:ring-2 focus:ring-stone-300`}
                        >
                          {statuses.map(s => <option key={s} value={s}>{s}</option>)}
                        </select>
                      </td>
                      <td className="px-4 py-3">
                        <button
                          onClick={() => deleteWrestler(wrestler.id)}
                          className="text-stone-400 hover:text-red-500 transition-colors"
                        >
                          üóëÔ∏è
                        </button>
                      </td>
                    </tr>
