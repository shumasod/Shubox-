    <div className="min-h-screen bg-white font-sans">
      {/* Sidebar */}
      <div className="fixed left-0 top-0 h-full w-60 bg-stone-50 border-r border-stone-200 p-3">
        <div className="flex items-center gap-2 px-2 py-3 mb-4">
          <div className="w-6 h-6 bg-gradient-to-br from-red-500 to-red-700 rounded flex items-center justify-center text-white text-xs font-bold">
            Áõ∏
          </div>
          <span className="font-medium text-stone-800">Áõ∏Êí≤„Éá„Éº„Çø„Éô„Éº„Çπ</span>
        </div>
        
        <nav className="space-y-1">
          <button
            onClick={() => setActiveView('wrestlers')}
            className={`w-full flex items-center gap-2 px-2 py-1.5 rounded text-sm transition-colors ${
              activeView === 'wrestlers' ? 'bg-stone-200 text-stone-900' : 'text-stone-600 hover:bg-stone-100'
            }`}
          >
            <span>üë§</span>
            <span>ÂäõÂ£´‰∏ÄË¶ß</span>
          </button>
          <button
            onClick={() => setActiveView('matches')}
            className={`w-full flex items-center gap-2 px-2 py-1.5 rounded text-sm transition-colors ${
              activeView === 'matches' ? 'bg-stone-200 text-stone-900' : 'text-stone-600 hover:bg-stone-100'
            }`}
          >
            <span>‚öîÔ∏è</span>
            <span>ÂèñÁµÑÁµêÊûú</span>
          </button>
          <button
            onClick={() => setActiveView('ranking')}
            className={`w-full flex items-center gap-2 px-2 py-1.5 rounded text-sm transition-colors ${
              activeView === 'ranking' ? 'bg-stone-200 text-stone-900' : 'text-stone-600 hover:bg-stone-100'
            }`}
          >
            <span>üèÜ</span>
            <span>Áï™‰ªòË°®</span>
          </button>
        </nav>

        <div className="absolute bottom-4 left-3 right-3">
          <div className="text-xs text-stone-400 px-2">
            ‰ª§Âíå7Âπ¥ ÂàùÂ†¥ÊâÄ
          </div>
        </div>
      </div>

      {/* Main Content */}
      <div className="ml-60 p-8">
        {activeView === 'wrestlers' && (
          <div>
            <div className="flex items-center justify-between mb-6">
              <h1 className="text-3xl font-bold text-stone-800">ÂäõÂ£´‰∏ÄË¶ß</h1>
              <button
                onClick={() => setShowAddWrestler(true)}
                className="flex items-center gap-1 px-3 py-1.5 text-sm bg-stone-800 text-white rounded hover:bg-stone-700 transition-colors"
              >
                <span>+</span>
                <span>Êñ∞Ë¶èËøΩÂä†</span>
              </button>
            </div>

            {/* Filters */}
            <div className="flex gap-4 mb-4">
              <div className="flex items-center gap-2">
                <span className="text-sm text-stone-500">Áï™‰ªò:</span>
                <select
                  value={filterRank}
                  onChange={(e) => setFilterRank(e.target.value)}
                  className="text-sm border border-stone-200 rounded px-2 py-1 focus:outline-none focus:ring-2 focus:ring-stone-300"
                >
                  <option value="all">„Åô„Åπ„Å¶</option>
                  {ranks.map(r => <option key={r} value={r}>{r}</option>)}
                </select>
              </div>
              <div className="flex items-center gap-2">
                <span className="text-sm text-stone-500">‰∏¶„Å≥Êõø„Åà:</span>
                <select
                  value={sortBy}
                  onChange={(e) => setSortBy(e.target.value)}
                  className="text-sm border border-stone-200 rounded px-2 py-1 focus:outline-none focus:ring-2 focus:ring-stone-300"
                >
                  <option value="rank">Áï™‰ªòÈ†Ü</option>
                  <option value="wins">Âãù„Å°Êï∞È†Ü</option>
                  <option value="name">ÂêçÂâçÈ†Ü</option>
                </select>
              </div>
            </div>

            {/* Table */}
            <div className="border border-stone-200 rounded-lg overflow-hidden">
              <table className="w-full">
                <thead className="bg-stone-50">
                  <tr className="text-left text-xs text-stone-500 uppercase tracking-wider">
                    <th className="px-4 py-3 font-medium">ÂõõËÇ°Âêç</th>
                    <th className="px-4 py-3 font-medium">Áï™‰ªò</th>
                    <th className="px-4 py-3 font-medium">Âãù</th>
                    <th className="px-4 py-3 font-medium">Êïó</th>
                    <th className="px-4 py-3 font-medium">ÂãùÁéá</th>
                    <th className="px-4 py-3 font-medium">Áä∂ÊÖã</th>
                    <th className="px-4 py-3 font-medium"></th>
                  </tr>
                </thead>
                <tbody className="divide-y divide-stone-100">
                  {filteredWrestlers.map(wrestler => (
                    <tr key={wrestler.id} className="hover:bg-stone-50 transition-colors">
                      <td className="px-4 py-3">
                        <input
                          type="text"
