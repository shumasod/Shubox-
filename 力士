                    <button
                      onClick={() => setShowAddWrestler(false)}
                      className="px-4 py-2 text-stone-600 hover:bg-stone-100 rounded transition-colors"
                    >
                      „Ç≠„É£„É≥„Çª„É´
                    </button>
                    <button
                      onClick={addWrestler}
                      className="px-4 py-2 bg-stone-800 text-white rounded hover:bg-stone-700 transition-colors"
                    >
                      ËøΩÂä†
                    </button>
                  </div>
                </div>
              </div>
            )}
          </div>
        )}

        {activeView === 'matches' && (
          <div>
            <div className="flex items-center justify-between mb-6">
              <h1 className="text-3xl font-bold text-stone-800">ÂèñÁµÑÁµêÊûú</h1>
              <button
                onClick={() => setShowAddMatch(true)}
                className="flex items-center gap-1 px-3 py-1.5 text-sm bg-stone-800 text-white rounded hover:bg-stone-700 transition-colors"
              >
                <span>+</span>
                <span>ÂèñÁµÑËøΩÂä†</span>
              </button>
            </div>

            <div className="space-y-4">
              {[...new Set(matches.map(m => m.day))].sort((a, b) => b - a).map(day => (
                <div key={day} className="border border-stone-200 rounded-lg overflow-hidden">
                  <div className="bg-stone-50 px-4 py-2 font-medium text-stone-700">
                    {day}Êó•ÁõÆ
                  </div>
                  <div className="divide-y divide-stone-100">
                    {matches.filter(m => m.day === day).map(match => (
                      <div key={match.id} className="px-4 py-3 flex items-center justify-between hover:bg-stone-50 transition-colors">
                        <div className="flex items-center gap-4">
                          <span className={`font-medium ${match.winner === match.east ? 'text-red-600' : 'text-stone-600'}`}>
                            {match.east}
                            {match.winner === match.east && <span className="ml-1">‚óã</span>}
                          </span>
                          <span className="text-stone-400">vs</span>
                          <span className={`font-medium ${match.winner === match.west ? 'text-red-600' : 'text-stone-600'}`}>
                            {match.winner === match.west && <span className="mr-1">‚óã</span>}
                            {match.west}
                          </span>
                        </div>
                        <div className="flex items-center gap-3">
                          <span className="text-sm text-stone-500 bg-stone-100 px-2 py-0.5 rounded">
                            {match.technique}
                          </span>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>

            {/* Add Match Modal */}
            {showAddMatch && (
              <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
                <div className="bg-white rounded-lg p-6 w-96 shadow-xl">
                  <h2 className="text-xl font-bold mb-4">ÂèñÁµÑËøΩÂä†</h2>
                  <div className="space-y-4">
                    <div>
                      <label className="block text-sm text-stone-600 mb-1">Êó•ÁõÆ</label>
                      <input
                        type="number"
                        value={newMatch.day}
                        onChange={(e) => setNewMatch({...newMatch, day: parseInt(e.target.value) || 1})}
                        className="w-full border border-stone-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-stone-300"
                        min="1"
                        max="15"
                      />
                    </div>
                    <div>
                      <label className="block text-sm text-stone-600 mb-1">Êù±Êñπ</label>
                      <select
                        value={newMatch.east}
                        onChange={(e) => setNewMatch({...newMatch, east: e.target.value})}
                        className="w-full border border-stone-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-stone-300"
                      >
                        <option value="">ÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑ</option>
                        {wrestlers.map(w => <option key={w.id} value={w.name}>{w.name}</option>)}
                      </select>
                    </div>
                    <div>
                      <label className="block text-sm text-stone-600 mb-1">Ë•øÊñπ</label>
                      <select
                        value={newMatch.west}
                        onChange={(e) => setNewMatch({...newMatch, west: e.target.value})}
                        className="w-full border border-stone-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-stone-300"
                      >
                        <option value="">ÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑ</option>
                        {wrestlers.map(w => <option key={w.id} value={w.name}>{w.name}</option>)}
                      </select>
                    </div>
                    <div>
                      <label className="block text-sm text-stone-600 mb-1">ÂãùËÄÖ</label>
                      <select
                        value={newMatch.winner}
                        onChange={(e) => setNewMatch({...newMatch, winner: e.target.value})}
                        className="w-full border border-stone-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-stone-300"
                      >
                        <option value="">ÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑ</option>
                        {newMatch.east && <option value={newMatch.east}>{newMatch.east}</option>}
                        {newMatch.west && <option value={newMatch.west}>{newMatch.west}</option>}
                      </select>
                    </div>
                    <div>
                      <label className="block text-sm text-stone-600 mb-1">Ê±∫„Åæ„ÇäÊâã</label>
                      <select
                        value={newMatch.technique}
                        onChange={(e) => setNewMatch({...newMatch, technique: e.target.value})}
                        className="w-full border border-stone-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-stone-300"
                      >
                        <option value="">ÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑ</option>
                        {techniques.map(t => <option key={t} value={t}>{t}</option>)}
                      </select>
                    </div>
                  </div>
                  <div className="flex justify-end gap-2 mt-6">
                    <button
                      onClick={() => setShowAddMatch(false)}
                      className="px-4 py-2 text-stone-600 hover:bg-stone-100 rounded transition-colors"
                    >
                      „Ç≠„É£„É≥„Çª„É´
                    </button>
                    <button
                      onClick={addMatch}
                      className="px-4 py-2 bg-stone-800 text-white rounded hover:bg-stone-700 transition-colors"
                    >
                      ËøΩÂä†
                    </button>
                  </div>
                </div>
              </div>
            )}
          </div>
        )}

        {activeView === 'ranking' && (
          <div>
            <h1 className="text-3xl font-bold text-stone-800 mb-6">Áï™‰ªòË°®</h1>
            
            <div className="bg-gradient-to-b from-amber-50 to-amber-100 border-4 border-amber-800 rounded-lg p-8">
              <div className="text-center mb-8">
                <div className="text-2xl font-bold text-amber-900 tracking-widest">‰ª§Âíå‰∏ÉÂπ¥ÂàùÂ†¥ÊâÄ</div>
                <div className="text-amber-700 mt-1">Áï™‰ªòË°®</div>
              </div>

              <div className="grid grid-cols-2 gap-8">
                {/* East Side */}
                <div className="text-right">
                  <div className="text-lg font-bold text-red-800 mb-4 tracking-widest">Êù±</div>
                  {ranks.map(rank => {
                    const eastWrestlers = wrestlers.filter(w => w.rank === rank);
                    return eastWrestlers.length > 0 ? (
                      <div key={`east-${rank}`} className="mb-4">
                        <div className="text-xs text-amber-700 mb-1">{rank}</div>
                        {eastWrestlers.slice(0, Math.ceil(eastWrestlers.length / 2)).map(w => (
                          <div key={w.id} className="text-lg font-medium text-stone-800 py-1">
                            {w.name}
                            <span className="text-sm text-stone-500 ml-2">
                              {w.wins}-{w.losses}
                            </span>
                          </div>
                        ))}
                      </div>
                    ) : null;
                  })}
                </div>

                {/* West Side */}
                <div className="text-left">
                  <div className="text-lg font-bold text-blue-800 mb-4 tracking-widest">Ë•ø</div>
                  {ranks.map(rank => {
                    const westWrestlers = wrestlers.filter(w => w.rank === rank);
                    return westWrestlers.length > 0 ? (
                      <div key={`west-${rank}`} className="mb-4">
                        <div className="text-xs text-amber-700 mb-1">{rank}</div>
                        {westWrestlers.slice(Math.ceil(westWrestlers.length / 2)).map(w => (
                          <div key={w.id} className="text-lg font-medium text-stone-800 py-1">
                            <span className="text-sm text-stone-500 mr-2">
                              {w.wins}-{w.losses}
                            </span>
                            {w.name}
                          </div>
                        ))}
                      </div>
                    ) : null;
                  })}
                </div>
              </div>

              <div className="mt-8 pt-4 border-t border-amber-300 text-center">
                <div className="text-sm text-amber-700">
                  ÂπïÂÜÖÂäõÂ£´ {wrestlers.length}Âêç
                </div>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  );
};

export default NotionSumoApp;
