                        <label className="block text-sm text-stone-600 mb-1">Âãù</label>
                        <input
                          type="number"
                          value={newWrestler.wins}
                          onChange={(e) => setNewWrestler({...newWrestler, wins: parseInt(e.target.value) || 0})}
