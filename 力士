                          min="0"
                        />
                      </div>
                      <div>
                        <label className="block text-sm text-stone-600 mb-1">Êïó</label>
                        <input
                          type="number"
                          value={newWrestler.losses}
                          onChange={(e) => setNewWrestler({...newWrestler, losses: parseInt(e.target.value) || 0})}
