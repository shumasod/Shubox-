import React, { useState } from 'react';

const giraffeFacts = [
  { icon: "😴", title: "Sleep", text: "キリンの睡眠時間は1日たったの20分〜2時間程度です。" },
  { icon: "🏃‍♂️", title: "Speed", text: "走ると時速約60kmのスピードに達します。" },
  { icon: "🦴", title: "Neck Bones", text: "首の骨の数は人間と同じ7個です。" },
  { icon: "👨‍👩‍👧", title: "Social", text: "群れで生活し、時には50頭以上の大きな群れをつくります。" },
  { icon: "🌍", title: "Conservation", text: "IUCNレッドリストでは「危急種（Vulnerable）」に指定されています。" },
];

const externalLinks = [
  { href: "https://ja.wikipedia.org/wiki/%E3%82%AD%E3%83%AA%E3%83%B3", text: "Wikipedia: キリン" },
  { href: "https://www.wwf.or.jp/activities/basicinfo/3849.html", text: "WWF: キリン保護" },
  { href: "https://www.ueno-zoo.jp/animals/mammal/giraffe", text: "上野動物園: キリン" },
];

const galleryImages = [
  { src: "/api/placeholder/800/600?img=1", alt: "キリンの親子" },
  { src: "/api/placeholder/800/600?img=2", alt: "サバンナを歩くキリン" },
  { src: "/api/placeholder/800/600?img=3", alt: "木の葉を食べるキリン" },
];

const GiraffePage = () => {
  const [mainImageLoaded, setMainImageLoaded] = useState(false);
  const [mainImageError, setMainImageError] = useState(false);
  const [isHovered, setIsHovered] = useState(false);

  const handleImageLoad = () => {
    setMainImageLoaded(true);
    setMainImageError(false);
  };

  const handleImageError = () => {
    setMainImageError(true);
    setMainImageLoaded(false);
  };

  return (
    <main className="min-h-screen bg-gradient-to-br from-orange-50 to-yellow-50 py-8 px-4">
      <div className="max-w-4xl mx-auto">
        <header className="text-center mb-8">
          <h1 className="text-4xl md:text-5xl font-bold text-amber-800 mb-4 tracking-tight">
            🦒 Beautiful Giraffe
          </h1>
          <p className="text-lg text-amber-700 max-w-2xl mx-auto leading-relaxed">
            Discover the elegance and grace of one of nature's most magnificent creatures
          </p>
        </header>

        <section 
          className="relative bg-white rounded-2xl shadow-xl overflow-hidden transition-all duration-300 hover:shadow-2xl"
          onMouseEnter={() => setIsHovered(true)}
          onMouseLeave={() => setIsHovered(false)}
        >
          <div className="relative aspect-[4/3] bg-gray-100">
            {!mainImageLoaded && !mainImageError && (
              <div className="absolute inset-0 bg-gradient-to-r from-gray-200 via-gray-300 to-gray-200 animate-pulse">
                <div className="flex items-center justify-center h-full">
                  <div className="text-gray-500 text-lg">Loading image...</div>
                </div>
              </div>
            )}
            {mainImageError && (
              <div className="absolute inset-0 bg-gray-100 flex items-center justify-center">
                <div className="text-center p-8">
                  <div className="text-6xl mb-4">🦒</div>
                  <p className="text-gray-600 text-lg mb-4">Failed to load image</p>
                  <button 
                    onClick={() => {
                      setMainImageError(false);
                      setMainImageLoaded(false);
                    }}
                    className="bg-amber-600 text-white px-6 py-2 rounded-lg hover:bg-amber-700 transition-colors"
                  >
                    Try Again
                  </button>
                </div>
              </div>
            )}
            <img 
              src="/api/placeholder/800/600"
              alt="A graceful giraffe standing tall in its natural habitat, showcasing its distinctive spotted pattern and elegant neck" 
              className={`
                w-full h-full object-cover transition-all duration-500
                ${mainImageLoaded ? 'opacity-100' : 'opacity-0'}
                ${isHovered ? 'scale-105' : 'scale-100'}
              `}
              onLoad={handleImageLoad}
              onError={handleImageError}
              loading="lazy"
            />
            <div className="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300" />
          </div>
          <div className="p-6 bg-white">
            <h2 className="text-2xl font-semibold text-gray-800 mb-3">
              The Tallest Mammal on Earth
            </h2>
            <p className="text-gray-600 leading-relaxed mb-4">
              Giraffes are remarkable creatures that can reach heights of up to 18 feet, 
              making them the tallest mammals on our planet. Their unique spotted patterns 
              are as individual as human fingerprints.
            </p>
            <div className="flex flex-wrap gap-2">
              <span className="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm font-medium">
                Wildlife
              </span>
              <span className="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                African Savanna
              </span>
              <span className="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                Herbivore
              </span>
            </div>
          </div>
        </section>

        {/* 画像ギャラリー */}
        <section className="mt-12">
          <h2 className="text-xl font-bold text-amber-700 mb-4">🖼️ キリンのフォトギャラリー</h2>
          <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            {galleryImages.map((img, idx) => (
              <img 
                key={idx}
                src={img.src}
                alt={img.alt}
                className="rounded-xl object-cover w-full h-48 shadow-md hover:scale-105 transition-transform"
                loading="lazy"
              />
            ))}
          </div>
        </section>

        {/* 豆知識 */}
        <section className="mt-12">
          <h2 className="text-xl font-bold text-amber-700 mb-4">🦒 キリン豆知識</h2>
          <div className="grid md:grid-cols-3 gap-6">
            {giraffeFacts.map((fact, idx) => (
              <div key={idx} className="bg-white rounded-xl p-6 shadow-lg text-center">
                <div className="text-3xl mb-3">{fact.icon}</div>
                <h3 className="text-xl font-semibold text-gray-800 mb-2">{fact.title}</h3>
                <p className="text-gray-600">{fact.text}</p>
              </div>
            ))}
          </div>
        </section>

        {/* 外部リンク */}
        <section className="mt-12">
          <h2 className="text-xl font-bold text-amber-700 mb-4">🔗 もっと知りたい方へ</h2>
          <ul className="list-disc ml-6 space-y-2">
            {externalLinks.map((link, idx) => (
              <li key={idx}>
                <a href={link.href} target="_blank" rel="noopener noreferrer" className="text-blue-700 underline hover:text-blue-900">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </section>
      </div>
    </main>
  );
};

export default GiraffePage;
