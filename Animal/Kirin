                  <button 
                    onClick={() => {
                      setMainImageError(false);
                      setMainImageLoaded(false);
                    }}
                    className="bg-amber-600 text-white px-6 py-2 rounded-lg hover:bg-amber-700 transition-colors"
                  >
                    Try Again
                  </button>
                </div>
